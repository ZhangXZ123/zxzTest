<Window x:Class="WpfApplication3.RegisterWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication3"
        mc:Ignorable="d"
        Title="Register" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="用户码" HorizontalAlignment="Left" Height="30" Margin="35,70,0,0" VerticalAlignment="Top" Width="55"/>
        <Label x:Name="label1" Content="注册码" HorizontalAlignment="Left" Margin="40,135,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.125,-1"/>
        <TextBox x:Name="textUserCode" HorizontalAlignment="Left" Height="75" Margin="100,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" TextChanged="textUserCode_TextChanged"/>
        <TextBox x:Name="textRegisterCode" HorizontalAlignment="Left" Height="20" Margin="100,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="GetUserCode" Content="获取用户码" HorizontalAlignment="Left" Height="25" Margin="60,210,0,0" VerticalAlignment="Top" Width="65" Click="button_Click"/>
        <Button x:Name="Register" Content="注册" HorizontalAlignment="Left" Height="25" Margin="160,210,0,0" VerticalAlignment="Top" Width="75" Click="Register_Click"/>

    </Grid>
</Window>
